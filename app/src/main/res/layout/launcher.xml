<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/screen">

    <ImageView
        android:id="@+id/iv_master_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:id="@+id/iv_bkgnd_mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="?attr/colorMask"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">
        
        <View
            android:layout_width="131.89dp"
            android:layout_height="122.67dp"
            android:foreground="@drawable/ic_connect_logo_v3_round"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:gravity="center_horizontal"
            android:textColor="@color/white_100"
            android:textStyle="bold"
            android:text="@string/app_name"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="23dp"
            android:gravity="center_horizontal"
            android:textColor="@color/white_75"
            android:textStyle="normal"
            android:text="@string/app_author_text"
            android:layout_marginBottom="50dp"
            />

        <!-- ConNET status-->

        <LinearLayout
            android:paddingHorizontal="30dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                android:text="@string/launcher_fsn"
                android:gravity="center"
                android:paddingRight="5dp"
                android:textColor="@color/white_75"/>



            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:id="@+id/cv_fsn_status"
                app:cardCornerRadius="5dp"
                android:outlineAmbientShadowColor="@color/clear"
                android:outlineSpotShadowColor="@color/clear"
                app:cardBackgroundColor="@color/negative_75"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:autoSizeTextType="uniform"
                    android:maxLines="1"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:text="@string/launcher_fsn_bad"
                    android:id="@+id/tv_fsn_status"
                    android:textColor="@color/white_75"
                    />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
<resources>

    <!-- Some Color attributes -->
    <attr name="colorBlackThenWhite" format="color"/>
    <attr name="colorMask" format="color"/>
    <attr name="dmAlpha" format="float"/>
    <attr name="overlay_alpha" format="float"/>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <!-- Settings for non-rectangular screens (Notch, punch-hole, teardrop, etc.)  -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryDark">#005CA1</item>
        <item name="colorAccent">#0092FF</item>
    </style>

    <style name="AppTheme.Splash">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="AppTheme.Light">
        <item name="colorBlackThenWhite">#000000</item>
        <item name="colorMask">#4D000000</item>
        <item name="dmAlpha">0.3</item>
    </style>

    <style name="AppTheme.Dark">
        <item name="colorBlackThenWhite">#FFFFFF</item>
        <item name="colorMask">#CC000000</item>
        <item name="dmAlpha">0.9</item>
    </style>

</resources>
